{
  "[markdown]": {
    "editor.rulers": [80]
  },
  "[python]": {
    "editor.rulers": [89]
  },
  "prettier.printWidth": 79,
  "rewrap.wrappingColumn": 79,
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": ["tests"],
  "markdownlint.config": {
    "MD033": { "allowed_elements": ["i", "span", "a", "img"] },
    "MD041": false
  }
}
